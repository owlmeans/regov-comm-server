{
  "name": "@owlmeans/regov-comm-server",
  "version": "0.8.0",
  "description": "Node.js Re:gov server wallet agent for SSI",
  "main": "build/index.js",
  "author": "Igor Tkachenko",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@owlmeans/regov-comm": "^0.8.0",
    "@owlmeans/regov-ext-identity": "^0.8.0",
    "@owlmeans/regov-ssi-core": "^0.8.0",
    "dotenv": "^16.0.3",
    "ethers": "^6.4.0",
    "i18next": "^22.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@types/node": "^20.2.5",
    "babel-loader": "^9.1.2",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "watch": "nodemon --watch './**/*.ts' --watch '../src/**/*' --exec 'ts-node' src/index.ts",
    "build": "tsc -b -f && webpack -c ./webpack/prod.config.js",
    "start": "node ./build/comm-serv.js",
    "watch:build": "tsc -b -w --preserveWatchOutput --pretty",
    "watch:bundle": "NODE_ENV=development webpack -c ./webpack/prod.config.js --watch",
    "watch:serve": "nodemon ./build/comm-serv.js --watch ./build/**/*"
  }
}
